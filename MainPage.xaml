<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="GeminiApiApp.MainPage">

    <StackLayout Padding="20">
        <Editor x:Name="inputTextEditor" Placeholder="Digite seu texto aqui..." HeightRequest="100" />
        <Button Text="Gerar Conteúdo" Clicked="OnGenerateContentClicked" />
        <Label x:Name="responseLabel" Text="Resposta aparecerá aqui." />
    </StackLayout>

</ContentPage>
